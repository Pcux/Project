<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/gstvdl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="4dp"
        android:text="2"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/gstvsl"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gstvsl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="8dp"
        android:text="+"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/gstvdm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gstvdm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="4dp"
        android:text="2"
        android:textSize="50sp"
        app:layout_constraintEnd_toStartOf="@+id/gstvsr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gstvsr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="180dp"
        android:text="*"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gstvdr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:text="2"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/gstvsr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gstvequals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:text="="
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/gstvdr"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gstvda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="72dp"
        android:text="6"
        android:textSize="50sp"
        app:layout_constraintStart_toEndOf="@+id/gstvequals"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tmpb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="308dp"
        android:layout_marginEnd="8dp"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gstvsr" />

    <RadioGroup
        android:id="@+id/gnrg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="220dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/gnrg21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextplus"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/gnrg22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextminus"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/gnrg23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextmul"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/gnrg24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextdiv"
            android:textSize="25sp" />
    </RadioGroup>


    <RadioGroup
        android:id="@+id/gnrg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/gnrg41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextplus"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/gnrg42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextminus"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/gnrg43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextmul"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/gnrg44"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gsrbtextdiv"
            android:textSize="25sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/textScore"
        android:layout_width="87dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Score: 0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

    <TextView
        android:id="@+id/textLevel"
        android:layout_width="88dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="Level: 0"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.958" />

</android.support.constraint.ConstraintLayout>